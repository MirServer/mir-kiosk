#!/bin/bash

display-layout=$(snapctl get display-layout)
if [ -n "${display-layout}" ]; then
  if [ -e "$SNAP_COMMON/miral-kiosk.config" ]; then
    sed --in-place=.save '/^display-layout/d' $SNAP_COMMON/miral-kiosk.config
  fi
  echo display-layout=${display-layout} >> $SNAP_COMMON/miral-kiosk.config
  snapctl restart $SNAP_NAME
fi

#!/bin/sh

kiosk_mode=$(snapctl get kiosk-mode)
case $kiosk_mode in
    ""|"on")
        kiosk_mode="on"
        ;;
    "off")
        kiosk_mode="off"
        ;;
    *)
        echo "kiosk-mode can only be set to [off|on]"
        exit 1
        ;;
esac

echo "kiosk-mode=$kiosk_mode" > $SNAP_DATA/config_options
